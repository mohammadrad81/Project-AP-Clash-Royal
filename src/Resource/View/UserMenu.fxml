<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.UserMenuController">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="700.0" fitWidth="1400.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Pictures/backgrounds/backGround2.jpg" />
                    </image>
                </ImageView>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="370.0" prefWidth="234.0" spacing="10.0" BorderPane.alignment="CENTER">
                          <children>
                        <Label fx:id="welcomeLabel" alignment="CENTER" style="-fx-background-color: #2d2323;" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets left="4.0" right="4.0" />
                           </padding>
                        </Label>
                              <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goProfilePage" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="PROFILE">
                                  <VBox.margin>
                                      <Insets />
                                  </VBox.margin>
                        </Button>
                              <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goBattleDeck" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="BATTLE DECK" />
                              <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goBattleHistory" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="BATTLE HISTORY" />
                              <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goTrainingCamp" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="TRAINING CAMP" />
                        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goWaitingPage" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="1V1" />
                        <Label fx:id="errorLabel" style="-fx-background-color: #FF0000FF;" visible="false">
                           <padding>
                              <Insets left="4.0" right="4.0" />
                           </padding>
                        </Label>
                          </children>
                     <BorderPane.margin>
                        <Insets top="100.0" />
                     </BorderPane.margin>
                      </VBox>
               </center>
               <bottom>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="20.0" prefWidth="100.0" stylesheets="@../Styles/ButtonsStyles.css" text="LOG OUT">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </bottom>
            </BorderPane>
            </children>
        </StackPane>
    </center>
</BorderPane>
